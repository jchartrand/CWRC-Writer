{
  "name": "cwrcwriter",
  "version": "1.0.0",
  "description": "intuitive document editing with xml and rdf",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jchartrand/CWRC-Writer.git"
  },
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "annotation"
  ],
  "author": "Andrew MacDonald, James Chartrand",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/jchartrand/CWRC-Writer/issues"
  },
  "homepage": "https://github.com/jchartrand/CWRC-Writer#readme",
  "scripts": {
    "clean": "rm -rf build/{css/*,js/*,images/*}",
    "lint": "eslint src/js",
    "browserify": "browserify src/main.js --debug -t [ babelify --presets [ es2015 react ] ] -p [ minifyify --map bundle.js.map --output build/bundle.js.map ] > build/bundle.js",
    "serve": "beefy src/main.js --browserify -t babelify --live",
    "build:images": "cp -r src/img build/img",
    "build:css": "cp -r src/css build/css",
    "build:html": "cp src/*.htm build/.",
    "build:xml": "cp -r src/xml build/xml",
    "build:js": "npm run lint && npm run browserify",
    "build": "npm run clean && mkdir -p build && npm run build:images && npm run build:css && npm run build:html && npm run build:js && npm run build:xml",
    "postinstall": "npm run build && npm run serve"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "bootstrap-datepicker": "^1.6.1",
    "jquery": "^3.0.0",
    "jquery-layout": "^1.0.0",
    "jquery-ui": "^1.10.5",
    "jquery-xpath": "^0.3.1",
    "jquery.tmpl": "0.0.2",
    "jstree": "^3.3.1",
    "knockout": "^3.4.0",
    "moment": "^2.13.0",
    "objtree": "^0.1.1",
    "octokit": "^0.10.4",
    "tinymce": "^4.3.13"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "beefy": "^2.1.6",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "minifyify": "^7.3.3"
  }
}
